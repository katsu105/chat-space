.sidebar
  .sidebar__user
    %h3.sidebar__user--nemu
      = current_user.name
      .sidebar__user--icon
        %i.fa.fa-edit
          = link_to new_group_path do
            = fa_icon 'pencil-square-o', class: 'icon'
        %i.fa.fa-cog
          = link_to edit_user_path(current_user) do
            = fa_icon 'cog', class: 'icon'
    .sidebar__contents
      - current_user.groups.each do |group|
        = link_to group_messages_path(group) do
          .sidebar__contents--groups
            = group.name
          .sidebar__contents--messege
            = group.show_last_message
.main
  .main__chatgroup
    .main__chatgroup--contents
      .main__chatgroup--theme #{@group.name}
      .main__chatgroup--text MEMBER: #{current_user.name}


    / %input.main__chatgroup--edit-btn{href: "/groups/#{@group.id}/edit", type: "submit", value: "Edit"}/
    = link_to 'Edit', '/groups/#{@group.id}/edit', class: 'main__chatgroup--edit-btn'

  .messages
    = render @messages

  .form
    = form_for [@group, @message], class: 'new_message' do |f|
      = f.text_field :content, class: 'form__message', placeholder: 'type a message'
      .form__mask
        = f.label :image, class: 'form__mask__image' do
          = fa_icon 'picture-o', class: 'icon'
          = f.file_field :image, class: 'hidden'
      = f.submit 'Send', class: 'form__submit'

